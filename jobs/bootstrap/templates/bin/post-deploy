#!/bin/bash

for package_bin_dir in $(ls -d /var/vcap/packages/*/*bin)
do
  export PATH=${package_bin_dir}:$PATH
done

pushd /var/vcap/store/bootstrap
bash /var/vcap/packages/dcos/dcos_generate_config.sh
bash /var/vcap/packages/dcos/dcos_generate_config.sh --install-prereqs
bash /var/vcap/packages/dcos/dcos_generate_config.sh --deploy || true
bash /var/vcap/packages/dcos/dcos_generate_config.sh --deploy || true
