#!/bin/bash
 
STORE_DIR=/var/vcap/store
STORE=/var/vcap/instance/disks/<%= link("store").p("name") %>
if ! e2fsck -n $STORE
then
  mkfs.ext4 -F $STORE
fi
if ! mountpoint -q $STORE_DIR
then
  mkdir -p $STORE_DIR
  mount -t ext4 $STORE $STORE_DIR
fi

if [ ! -L /opt ] ; then
  rm -rf /opt
fi

mkdir -p /opt/pwx/bin /var/lib/osd /var/cores /var/vcap/store/portworx/osd  /var/vcap/store/opt
ln -sf /var/vcap/store/portworx /etc/pwx
ln -sf /var/vcap/store/opt /opt
ln -sf /var/vcap/store/portworx/osd /var/lib/osd